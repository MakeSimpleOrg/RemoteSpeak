{
  "id": "org.makesimple.remotespeak",
  "version": "1.0.1",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Remote Speak"
  },
  "description": {
    "en": "Allows you to send voice messages in any language to your android device."
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Dmitriy Ponomarev",
    "email": "admin@makesimple.org"
  },
  "flow": {
    "actions": [
      {
        "id": "send_msg",
        "title": {
            "en": "Send an message"
        },
        "args": [
          {
            "name": "device",
            "type": "autocomplete",
            "placeholder": {
              "en": "Device"
             }
          },
          {
            "name": "lang",
            "type": "autocomplete",
            "placeholder": {
              "en": "Language"
             }
          },
          {
            "name": "msg",
            "type": "text",
            "placeholder": {
              "en": "Message"
             }
          }
        ]
      }
    ]
  }
}